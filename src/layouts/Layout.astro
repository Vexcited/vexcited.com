---
import "@fontsource/geist/300";
import "@fontsource/geist/400";
import "@fontsource/geist/600";
import "@fontsource/geist/900";
import "@fontsource/geist-mono/400";
import "@fontsource/geist-mono/600";
import "../assets/fonts/array/index.css"; // Array

interface Props {
  description: string;
  title: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <title>{Astro.props.title}</title>
    <meta name="title" content={Astro.props.title} />
    <meta name="description" content={Astro.props.description} />
    <link rel="canonical" href="https://www.vexcited.com/" />

    <meta property="og:site_name" content="Vexcited" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.vexcited.com/" />
    <meta property="og:title" content={Astro.props.title} />
    <meta property="og:description" content={Astro.props.description} />
    <meta property="og:image" content="/og.png" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.vexcited.com/" />
    <meta property="twitter:title" content={Astro.props.title} />
    <meta property="twitter:description" content={Astro.props.description} />
    <meta property="twitter:image" content="/og.png" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="bg-#151515 text-white font-[Geist] selection:text-#151515 selection:bg-#C6A0F6"
  >
    <slot />
  </body>
</html>
