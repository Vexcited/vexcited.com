---
import Layout from "../layouts/Layout.astro";
import DuoToneMe from "../assets/landing/duotone.png";
import Grain from "../assets/grain.png";
import Cross from "../assets/landing/cross.svg";
import Circle from "../assets/landing/circle.svg";
import InternalRadicle from "~icons/internal/radicle";
import LucideInstagram from "~icons/lucide/instagram";
import LucideTwitch from "~icons/lucide/twitch";
import LucideYoutube from "~icons/lucide/youtube";
---

<Layout
  title="Mikkel ALMONTE--RINGAUD"
  description="Mikkel ALMONTE--RINGAUD's portfolio"
>
  <div class="relative h-screen overflow-hidden">
    <div
      class="pointer-events-none fixed inset-0 z-50 bg-repeat mix-blend-color-dodge"
      style={`background-image: url(${Grain.src})`}
    >
    </div>

    <div
      class="absolute max-[390px]:(inset-x-16px mx-auto) min-[1360px]:right-6vw z-20 rd-10px bg-#1E2030 p-32px rotate-4 max-[1360px]:left-14vw max-[900px]:bottom-10vh min-[900px]:top-13vh"
    >
      <div
        class="z-4 absolute inset-0 m-4% border-2 border-#C6A0F6 border-dashed rd-10px pointer-events-none"
      >
      </div>

      <h1 class="font-900 leading-125% tracking-wider text-#CAD3F5">
        Mikkel ALMONTE--RINGAUD
      </h1>
      <p class="font-[Geist_Mono] tracking-wide text-#6E738D">@vexcited</p>

      <div class="flex gap-12px text-20px text-#C6A0F6 mt-16px">
        <a target="_blank" href="https://code.vexcited.com/"
          ><InternalRadicle /></a
        >
        <a target="_blank" href="https://instagram.com/vexcitedoff"
          ><LucideInstagram /></a
        >
        <a target="_blank" href="https://twitch.tv/vexcited"><LucideTwitch /></a
        >
        <a target="_blank" href="https://youtube.com/@Vexcited"
          ><LucideYoutube /></a
        >
      </div>

      <img
        src="/favicon.svg"
        alt="Vexcited's Logo"
        class="z-5 absolute -bottom-34px -right-16px size-100px pointer-events-none select-none"
      />
    </div>

    <img
      src={Cross.src}
      class="z-10 absolute top-10vh left-8vh pointer-events-none select-none"
    />
    <img
      src={Circle.src}
      class="z-10 absolute top-44vh right-5vh pointer-events-none select-none"
    />

    <div
      class="absolute top-4vh bottom-22vh inset-x-4vh justify-center items-center z-5 flex flex-col text-[min(16.5vw,30vh)] leading-[min(11.75vw,21.3vh)] font-900 text-#363A4F/15 tracking-wide pointer-events-none select-none"
    >
      <p>VEXCITED</p>
      <p>VEXCITED</p>
      <p>VEXCITED</p>
    </div>

    <div
      class="z-4 absolute top-4vh h-74vh inset-x-4vh border-2 border-#C6A0F6 border-dashed rd-14px"
    >
    </div>
    <div
      class="z-3 absolute top-6vh left-2vh h-74vh right-6vh border-2 border-#C6A0F6/50 border-dashed rd-14px"
    >
    </div>

    <div
      class="leading-12vw font-[Array] font-700 text-17.55vw text-#C6A0F6 select-none pointer-events-none"
    >
      <p class="absolute bottom-0 blur-2xl z-2">vexcited</p>
      <p class="absolute bottom-0 z-0 mix-blend-plus-lighter">vexcited</p>
    </div>

    <div
      class="mx-auto absolute flex -left-50% min-[670px]:-left-10vh items-center inset-0 w-fit pointer-events-none select-none z-10"
    >
      <img class="h-full object-cover z-4" src={DuoToneMe.src} />
      <img
        class="h-full -left-6vh absolute opacity-10 object-cover z-2"
        src={DuoToneMe.src}
      />
      <img
        class="h-full left-3vh absolute opacity-5 object-cover z-0"
        src={DuoToneMe.src}
      />
    </div>
  </div>
</Layout>
